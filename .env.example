# Environment Configuration for SFT Trading Pipeline
# Copy this file to .env and fill in your values

# ====== EODHD API Configuration ======
EODHD_API_KEY=your_api_key_here

# ====== Dataset Time Splits ======
# Training data range
TRAIN_START_DATE=2023-10-24
TRAIN_END_DATE=2024-12-31

# Test data range
TEST_START_DATE=2025-01-01
TEST_END_DATE=2025-04-24

# Validation split (optional, can be carved from training)
# If not set, will use last N days of training as validation
VALIDATION_DAYS=30

# ====== Data Paths ======
RAW_XML_DIR=data/raw_xml
JSONL_OUTPUT=data/jsonl/all.jsonl
HF_DATASET_DIR=data/hf_datasets/sft_dataset
PRICE_CACHE_DIR=data/price_cache

# ====== Model Configuration ======
BASE_MODEL=deepseek-ai/DeepSeek-V3.2-Exp
MAX_LENGTH=65536
CONTEXT_WINDOW=131072

# ====== Training Configuration ======
OUTPUT_DIR=checkpoints/sft-deepseek-v3.2exp-longctx
NUM_TRAIN_EPOCHS=2
LEARNING_RATE=1.5e-4
PER_DEVICE_TRAIN_BATCH_SIZE=1
GRADIENT_ACCUMULATION_STEPS=16

# ====== Evaluation Configuration ======
FORWARD_WINDOWS=1,5,10,30
RESULTS_DIR=results
EVAL_RESULTS_CSV=results/eval_results.csv

# ====== Logging & Monitoring ======
LOG_DIR=logs
USE_WANDB=false
WANDB_PROJECT=DeepSeek_SFT_Trading
WANDB_ENTITY=

# ====== Reproducibility ======
SEED=42
GIT_REPO=/opt/SFT-Charlie

# ====== Testing ======
SMOKE_TEST_MODE=false
SMOKE_TEST_SAMPLES=10
CPU_ONLY_MODE=true
